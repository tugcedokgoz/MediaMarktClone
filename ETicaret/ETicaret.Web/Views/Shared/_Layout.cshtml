<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ETicaret.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ETicaret.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.svg" style="height:50px;width:200px"/>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="container-fluid justify-content-center">
        <div class="card-group justify-content-center">
            <a asp-controller="Home" asp-action="MagazadanAl">
                <div class="card" style="width: 200px; height:120px">
                    <img src="~/img/magazadanteslimat.png" class="m-auto rounded anasayfacard" />
                    <div class="card-body">
                        Mağazadan Al
                    </div>
                </div>
            </a>
            <a asp-controller="Home" asp-action="KargoBedava">
                <div class="card" style="width: 200px; height:120px">
                    <img src="~/img/kargobedava.png" class="m-auto rounded anasayfacard" />
                    <div class="card-body">
                        Kargo Bedava
                    </div>
                </div>
            </a>
            <a asp-controller="Home" asp-action="KolayIade">
                <div class="card" style="width: 200px; height:120px">
                    <img src="~/img/kolayiade.png" class="m-auto rounded anasayfacard" />
                    <div class="card-body">
                        Kolay İade
                    </div>
                </div>
            </a>
            <a asp-controller="Home" asp-action="TelefonlaSiparis">
                <div class="card" style="width: 200px; height:120px">
                    <img src="~/img/telesatis.png" class="m-auto rounded anasayfacard" />
                    <div class="card-body">
                        Telefonla Sipariş
                    </div>
                </div>
            </a>
            <a asp-controller="Home" asp-action="AracaTeslimat">
                <div class="card" style="width: 200px; height:120px">
                    <img src="~/img/aracateslimat.png" class="m-auto rounded anasayfacard" />
                    <div class="card-body">
                        Araca Teslimat
                    </div>
                </div>
            </a>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ETicaret.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
